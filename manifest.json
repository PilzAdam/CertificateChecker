{
	"manifest_version": 2,
	"name": "Certificate Watch",
	"description": "Warns when TLS certificates change over time.",
	"author": "PilzAdam",
	"version": "1.4.0",

	"icons": {
		"16": "icons/cw_16.png",
		"128": "icons/cw_128.png"
	},
	
	"background": {
		"scripts": [
			"common.js",
			"cw_data.js",
			"background.js"
		]
	},
	
	"browser_action": {
		"browser_style": false,
		"default_icon": "icons/cw_16.png",
		"default_title": "Certificate Watch\nNo (relevant) TLS encrypted request in this tab",
		"default_popup": "popup.html"
	},
	
	"options_ui": {
		"page": "options.html",
		"browser_style": false
	},
	
	"permissions": [
		"https://*/*",
		"wss://*/*",
		"webRequest",
		"webRequestBlocking",
		"storage",
		"unlimitedStorage",
		"tabs"
	],
	
	"applications": {
		"gecko": {
			"id": "{ab8c066f-9e3e-4aa3-997e-dca3520fecd0}"
		}
	}
}
